            background-color: #f3f3f3;
        }
        h1 {
            color: #333;
        }
        .game-board {
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
            width: 80%;
        }
        .player-area {
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 10px;
            max-width: 45%;
            min-height: 300px;
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            justify-content: center;
            background-color: #eee;
        }
        .object {
            width: 60px;
            height: 60px;
            border: 1px solid #999;
            border-radius: 5px;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            background-color: white;
        }
        .selected {
            background-color: yellow;
        }
        .hidden {
            background-color: red;
        }
        .explode {
            background-color: gold;
            color: white;
            font-weight: bold;
